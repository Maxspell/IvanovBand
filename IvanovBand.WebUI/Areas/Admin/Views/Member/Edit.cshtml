@model IvanovBand.Domain.Entities.Member

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Member", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="editor-field">@Html.EditorFor(m => m.MemberID)</div>
    <div class="editor-label">@Html.LabelFor(m => m.Name)</div>
    <div class="editor-field">@Html.EditorFor(m => m.Name)</div>
    <div class="editor-label"><label for="File">Изображение</label></div>
    <div class="editor-field"><input type="file" name="file" /></div>
    <div class="editor-label">@Html.LabelFor(m => m.Instrument)</div>
    <div class="editor-field">@Html.EditorFor(m => m.Instrument)</div>
    <div class="editor-label">@Html.LabelFor(m => m.Description)</div>
    <div class="editor-field">@Html.TextAreaFor(m => m.Description, new { @class = "ckeditor" })</div>
    <div class="editor-label">@Html.LabelFor(m => m.Text)</div>
    <div class="editor-field">@Html.TextAreaFor(m => m.Text, new { @class = "ckeditor" })</div>
    <input type="submit" class="btn" value="Сохранить" />
    @Html.ActionLink("Отменить", "Index", "Member", null, new { @class = "btn" })
}