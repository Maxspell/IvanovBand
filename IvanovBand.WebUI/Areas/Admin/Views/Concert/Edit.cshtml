@model IvanovBand.Domain.Entities.Concert

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Concert", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="editor-field">@Html.EditorFor(m => m.ConcertId)</div>
    <div class="editor-label">@Html.LabelFor(m => m.Date)</div>
    <div class="editor-field">@Html.EditorFor(m => m.Date)</div>
    <div class="editor-label">@Html.LabelFor(m => m.Content)</div>
    <div class="editor-field">@Html.EditorFor(m => m.Content)</div>
    <input type="submit" class="btn" value="Сохранить" />
    @Html.ActionLink("Отменить", "Index", "Concert", null, new { @class = "btn" })
}
